@inherits BannerBase
@using CDNApplication.Components.Banners

<section hidden="@(!this.ShowBanner)" class="banner-container @this.ClassName">
    <section class="banner">
        <section class="banner-text-container">
            @if (this.State == BannerState.BETA)
            {
                <div class="banner-phase">
                    <span>Beta</span>
                </div>
            }
            @if (this.State == BannerState.ALPHA)
            {
                <div class="banner-phase">
                    <span>Alpha</span>
                </div>
            }
            @if (this.State == BannerState.WARNING)
            {
                <svg width="1.2em" height="1.2em" viewBox="0 0 16 16" class="bi bi-exclamation-triangle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 5zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />
                </svg>
            }
            @if (this.State == BannerState.ERROR)
            {
                <svg width="1.2em" height="1.2em" viewBox="0 0 16 16" class="bi bi-exclamation-circle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />
                </svg>
            }
            @if (this.State == BannerState.SUCCESS)
            {
                <svg width="1.2em" height="1.2em" viewBox="0 0 16 16" class="bi bi-check-circle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                </svg>
            }
            <p class="banner-text">
                @Message.ToString()
            </p>
        </section>
    </section>
</section>