<CascadingValue Value="this">
    <div class="container">
        <div class="card">
            <div class="card-header stepper-header">
                <h5>Processing phase</h5>
                <CSF.Components.Buttons.Actions.CSFEditButton />
            </div>

            <div class="card-body">
                <div class="steps">
                    @ChildContent
                </div>
            </div>
        </div>
    </div>
</CascadingValue>

<button @onclick="this.NextStep">Next</button>

<button @onclick="this.PreviousStep">Back</button>