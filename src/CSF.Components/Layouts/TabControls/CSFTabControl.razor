<CascadingValue Value="this">
    <section class="csf-tab-container"  role="group">
        <section class="csf-tab-button-group">
            @foreach (CSFTabPage tabPage in Pages)
            {
                <button type="button"
                        class="csf-tab-button @GetButtonClass(tabPage)"
                        @onclick=@( () => ActivatePage(tabPage) )>
                    @tabPage.Text
                </button>
            }
        </section>
        <section>
            @TabPageEndContent
        </section>
    </section>
    @TabPages
</CascadingValue>