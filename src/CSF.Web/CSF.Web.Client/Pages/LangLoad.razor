@page "/"
@page "/{SelectedLanguage}"

@inject NavigationManager navigationManager
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContextAccessor


@code {
    [Parameter]
    public string SelectedLanguage { get; set; }

    protected override void OnParametersSet()
    {
        base.OnParametersSet();
        SelectedLanguage = string.IsNullOrEmpty(SelectedLanguage) ? "en" : SelectedLanguage;
    }

    protected override void OnAfterRender(bool render)
    {
        var startPage = "/apply-seafarer-certificate";
        navigationManager.NavigateTo($"{navigationManager.BaseUri}{SelectedLanguage}{startPage}");
    }
}
