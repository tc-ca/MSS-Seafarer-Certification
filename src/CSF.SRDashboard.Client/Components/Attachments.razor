<Card HeaderClasses="csf-header">

    <Header>
        <h5>Attachments</h5>
        <CSF.Components.Buttons.Actions.CSFEditButton />
    </Header>

    <Body>
        @if (UploadedFiles != null)
        {
            int i = 0;

            @foreach (var x in UploadedFiles)
            {

                i++;
                <CSF.Components.Buttons.Actions.CSFViewButton Href="@x.FilePath" />
                <div><b>Marine medical examination report @i</b></div>
                <div>@x.FileName</div>

                if ((i % 2) == 0)
                {
                    <br />
                }

            }
        }

    </Body>

</Card>

