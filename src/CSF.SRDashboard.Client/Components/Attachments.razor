<Card HeaderClasses="csf-header">

    <Header>
        <h5>Attachments</h5>
        <CSF.Components.Buttons.Actions.CSFEditButton />
    </Header>

    <Body>
        @if (UploadedFiles != null)
        {
            @foreach (var uploadedFile in UploadedFiles)
            {
                <div style="display:flex;">
                    <CSF.Components.Buttons.Actions.CSFViewButton href="@uploadedFile.FilePath" target="_blank" download="@uploadedFile.FileName" style="text-align:center;flex-basis:10%;" />
                    <div>
                        <div><b>Marine medical examination report</b></div>
                        <div>@uploadedFile.FileName</div>
                    </div>
                </div>
            }
        }

    </Body>

</Card>

