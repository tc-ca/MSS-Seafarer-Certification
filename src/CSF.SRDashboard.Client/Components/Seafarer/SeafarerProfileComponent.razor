<div>
    <div class="row pt-3">
        <div class="col">
            <h3 class="p-2">Information</h3>
            <div class="p-3 border-bottom">
                <div class="row">
                    <div class="col">
                        <h6 class="font-weight-bold">First name</h6>
                        <p>@this.Applicant.FirstName</p>
                    </div>
                    <div class="col">
                        <h6 class="font-weight-bold">Last name</h6>
                        <p>@this.Applicant.LastName</p>
                    </div>
                    <div class="col">
                        <h6 class="font-weight-bold">Date of birth</h6>
                        <p>@this.Applicant.DateOfBirthString</p>
                    </div>
                    <div class="col">
                        <h6 class="font-weight-bold">CDN</h6>
                        <p>@this.Applicant.Cdn</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <h6 class="font-weight-bold">Gender</h6>
                        <p>@this.Applicant.FullGender</p>
                    </div>
                    <div class="col">
                        <h6 class="font-weight-bold">Language</h6>
                        <p>@this.Applicant.SelectedLanguage</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h3 class="p-2">Contact</h3>
            <div class="p-3 border-bottom">
                <div class="row">
                    <div class="col">
                        <h6 class="font-weight-bold">Phone number</h6>
                        <p>@this.Applicant.PhoneNumber</p>
                    </div>
                    <div class="col">
                        <h6 class="font-weight-bold">Secondary number</h6>
                        <p>@this.Applicant.SecondaryPhoneNumber</p>
                    </div>
                    <div class="col">
                        <h6 class="font-weight-bold">Email</h6>
                        <p>@this.Applicant.Email</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h3 class="p-2">Home address</h3>
            <div class="p-3 border-bottom">
                <div class="row">
                    <div class="col">
                        <h6 class="font-weight-bold">Address</h6>
                        <p>@this.Applicant.Address</p>
                    </div>
                    <div class="col">
                        <h6 class="font-weight-bold">City</h6>
                        <p>@this.Applicant.City</p>
                    </div>
                    <div class="col">
                        <h6 class="font-weight-bold">Province/Territory</h6>
                        <p>@this.Applicant.Province</p>
                    </div>
                    <div class="col">
                    <h6 class="font-weight-bold">Postal Code</h6>
                    <p>@this.Applicant.PostalCode</p>
                </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <h6 class="font-weight-bold">Country</h6>
                        <p>@this.Applicant.HomeCountry</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h3 class="p-2">Mailing address</h3>
            <div class="p-3">
                <div class="row">
                    <div class="col">
                        <h6 class="font-weight-bold">Address</h6>
                        <p>@this.Applicant.MailAddress</p>
                    </div>
                    <div class="col">
                        <h6 class="font-weight-bold">City</h6>
                        <p>@this.Applicant.MailCity</p>
                    </div>
                    <div class="col">
                        <h6 class="font-weight-bold">Province/Territory</h6>
                        <p>@this.Applicant.MailProvince</p>
                    </div>
                    <div class="col">
                        <h6 class="font-weight-bold">Postal Code</h6>
                        <p>@this.Applicant.MailPostalCode</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <h6 class="font-weight-bold">Country</h6>
                        <p>@this.Applicant.MailHomeCountry</p>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>