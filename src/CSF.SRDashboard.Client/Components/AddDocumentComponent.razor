@inject IStringLocalizer<Common> Localizer

<div>
    <div class="accordion mt-5" id="AttachmentAcc">
        <div class="row">
            <div class="col-11">
                <p class="mb-0 float-right">@Localizer["RequiredField"]<span class="text-danger">*</span></p>
            </div>
        </div>
        <Collapse HeaderTitleTextColor="#FFFFFF" Title="@Localizer["AddAttachment"]" HeaderBackgroundColor="#1B50B1" IsCollapsable="true">
            <BodyContent>
               
                    <UploadDocumentComponent OnFileUploaded="this.FileUploaded" AllowMultipleUploads="@this.AllowMultipleUploads" @bind-DocumentForm="this.DocumentForm" />
               
            </BodyContent>
        </Collapse>
    </div>
    @if (this.DocumentForm != null && this.DocumentForm.Count != 0)
    {
        <Collapse HeaderTitleTextColor="#FFFFFF" Title="@Localizer["Attachment"]" HeaderBackgroundColor="#1B50B1" IsCollapsable="true">
            <BodyContent>
                 <DocumentInformation EditContext="this.EditContext" UploadedDocuments="this.DocumentForm"></DocumentInformation>
            </BodyContent>
        </Collapse>
    }
</div>