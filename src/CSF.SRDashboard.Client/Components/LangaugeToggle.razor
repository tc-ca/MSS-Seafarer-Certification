@using System.Globalization
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Localization

@inject IStringLocalizer<Common> Localizer
@inject NavigationManager NavigationManager

<section class="csf-toggle-button-container">
    @if (Localizer["CurrentLanguage"].Value.Equals("en", StringComparison.InvariantCultureIgnoreCase))
    {
        <input type="radio" class="csf-toggle-button" @onchange="OnSelected" checked id="EN" name="toggle" value="en" /><label for="EN">EN</label>
        <input type="radio" class="csf-toggle-button" @onchange="OnSelected" id="FR" name="toggle" value="fr" /><label for="FR">FR</label>
    }
    else {
        <input type="radio" class="csf-toggle-button" @onchange="OnSelected" id="EN" name="toggle" value="en" /><label for="EN">EN</label>
        <input type="radio" class="csf-toggle-button" @onchange="OnSelected" checked id="FR" name="toggle" value="fr" /><label for="FR">FR</label>
    }

</section>

@code {
    private string MyCulture { get; set; }

    private void OnSelected(ChangeEventArgs e)
    {
        var culture = (string)e.Value;
        var uri = new Uri(NavigationManager.Uri)
        .GetComponents(UriComponents.PathAndQuery, UriFormat.Unescaped);
        var query = $"?culture={Uri.EscapeDataString(culture)}&" +
            $"redirectUri={Uri.EscapeDataString(uri)}";

        NavigationManager.NavigateTo("/Culture/SetCulture" + query, forceLoad: true);
    }

    private string getIsCheckedAttribute(string language)
    {
        return this.Localizer["CurrentLanguage"] == language ? "checked" : "";
    }
}
