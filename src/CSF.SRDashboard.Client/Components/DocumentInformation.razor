@foreach(var i in this.DocumentForm) { 

    <div class="card ml-4 mt-4">
        <div class="card-header bg-white mr-4 ml-4">
            <div class="row">
                <div class="pr-10 pl-0" style="width:71%">
                    <i class="fas fa-paperclip"><span class="csf-span ml-1">@i.FileName</span></i>
                </div>
                <div class="ml-5">
                    <button class="small-buttons" @onclick="@(e => RemoveAttachment(0))">
                        <i class="far fa-trash-alt"><span class="pl-1 csf-span">Delete</span></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="form-group">
                <EditForm EditContext="@this.EditContext">
                    <FluentValidationValidator />
                    <InputMultipleSelect UseSelectedItemsAsSelectTitle="true" Title="Document type(s)*" Id="DocumentTypesSelect" CheckBoxList="@i.DocumentTypeList" SelectTitle="Select Title">
                        <SelectedItemTemplate Context="SelectItem">
                            <span>@SelectItem, </span>
                        </SelectedItemTemplate>
                    </InputMultipleSelect>
                    <FormInputSelect Id="InputSelect" Label="Document language*" SelectLabel="Select one" Required="required" @bind-Value="i.SelectValue" ValidationFor="@(() =>i.SelectValue)">
                        @foreach (var item in i.Languages)
                            {
                            <option value="@item.Id">@item.Text</option>
                            }
                    </FormInputSelect>
                    <FormInputTextArea Id="InputTextArea" Label="Description" Required="required" Rows="2" Cols="50" @bind-Value="@i.Description" ValidationFor="@(() => i.Description)" />
                </EditForm>
            </div>
        </div>
    </div>
}