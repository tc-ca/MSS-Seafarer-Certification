@inject IStringLocalizer<Common> Localizer

<Card HeaderClasses="csf-header">

    <Header>
        <h5>@Localizer["SeafarerDetails"]</h5>
        <CSF.Components.Buttons.Actions.CSFEditButton Text="@Localizer["Edit"]" />
    </Header>

    <Body>
        <RadzenAccordion Multiple="true">
            <Items>
                <RadzenAccordionItem Text="@Localizer["TombstoneSummary"]">
                    <div><b>@Localizer["FirstAndLastName"]:</b></div>
                    <div>@Model.FirstName  @Model.LastName</div><br>
                    <div><b>@Localizer["CandidateDocumentNumber"]:</b></div>
                    <div>@Model.CDN</div><br>
                    <div><b>@Localizer["DateOfBirth"]:</b></div>
                    <div>@Model.DateOfBirth.ToShortDateString()</div><br>
                    <RadzenButton Style="background-color: #F7F9FC;color: #1A202C;
                        border: 1px solid #1A202C;margin: 0px;padding: 0 1rem;font-size: 14px;">@Localizer["ViewFullProfile"]</RadzenButton><br>
                    <br />
                </RadzenAccordionItem>

                <RadzenAccordionItem Text="@Localizer["MedicalSummary"]" Style="width: 300px">
                    <div><b>@Localizer["FitnessStatus"]:</b></div>
                    <div>@Model.FitnessStatus</div><br>
                    <div><b>Limitations:</b></div>
                    @if (Model.Limitations != null)
                        @foreach (var limitation in Model.Limitations)
                        {
                            <div>@limitation</div><br>
                        }
                    <div><b>@Localizer["DateOfExpiry"]:</b></div>
                    <div>@Model.DateOfExpiry</div><br>
                    <RadzenButton Style="background-color: #F7F9FC;color: #1A202C;
                        border: 1px solid #1A202C;margin: 0px;padding: 0 1rem;font-size: 14px;">
                        @Localizer["ViewFullMedicalFile"]
                    </RadzenButton><br />
                    <br />
                </RadzenAccordionItem>

                <RadzenAccordionItem Text="@Localizer["CertificationSummary"]">
                    <div><b>@Localizer["CurrentCertificates"]:</b></div>
                    @if (Model.CurrentCertificates != null)
                        @foreach (var certificate in Model.CurrentCertificates)
                        {
                            <div style="font-style: normal; font-weight: 600; font-size: 14px; line-height: 24px;">@certificate.CertificateNameEnglish</div>
                            <div style="font-style: normal; font-weight: 300; font-size: 12px; line-height: 20px;">@certificate.ExpiryDate.ToShortDateString()</div>
                        }
                    <br>
                    <RadzenButton Style="background-color: #F7F9FC;color: #1A202C;
                        border: 1px solid #1A202C;margin: 0px;padding: 0 1rem;font-size: 14px;">
                        @Localizer["ViewFullCertificationFile"]
                    </RadzenButton><br>
                    <br />
                </RadzenAccordionItem>
            </Items>
        </RadzenAccordion>
    </Body>
</Card>
