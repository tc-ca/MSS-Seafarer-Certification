@page "/SeafarerProfile/{Cdn}/edit-attachment/{DocumentId:guid}"

@if (this.UploadedDocuments.Any())
{
    <EditForm EditContext="@this.EditContext" OnValidSubmit="SaveChanges">
        <div class="d-flex">
            <div class="mr-auto p-2"><h3>@this.Applicant.FullName - edit attachment</h3></div>
            <div class="p-2"><button class="btn btn-light" onclick="window.history.back();">Back</button></div>
            <div class="p-2"><button class="btn btn-primary" type="submit">Save attachedment</button></div>
        </div>
        <hr />

        <div class="col-8">

            <Collapse HeaderTitleTextColor="#FFFFFF" Title="Attachment" HeaderBackgroundColor="#1B50B1" IsCollapsable="true">
                <BodyContent>
                    <CSF.SRDashboard.Client.Components.DocumentInformation EditContext="this.EditContext" UploadedDocuments="UploadedDocuments" Applicant="this.Applicant" IsReadOnly="false" />
                </BodyContent>
            </Collapse>
            <p>This file is link to request 124387M, 873920F</p>


        </div>

        <hr />
        <div class="d-flex">
            <div class="mr-auto p-2"></div>
            <div class="p-2"><button class="btn btn-light" onclick="window.history.back();">Cancel</button></div>
            <div class="p-2"><button class="btn btn-primary" type="submit">Save attachedment</button></div>
        </div>
    </EditForm>
}