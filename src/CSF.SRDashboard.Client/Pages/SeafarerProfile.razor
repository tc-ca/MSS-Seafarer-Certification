@page "/SeafarerProfile/{Cdn}"

<a class="btn btn-link" href="javascript:history.back()"> Back to search results</a>
<h3>@applicant.FirstName @applicant.LastName</h3>
<div class="border rounded col-10">

    <div class="bs-component mt-3">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#Summary">Summary</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#Requests">Requests</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#Documents">Documents</a>
            </li>
        </ul>
        <div id="profileTabs " class="tab-content">
            <div class="tab-pane fade show active" id="Summary">
                <div class="container">
                    <div class="row pt-3">
                        <div class="col">
                            <h3 class="p-2" style="background:#f2f4f7">Information</h3>
                            <div class="p-3">
                                <div class="row">
                                    <div class="col">
                                        <h6 class="font-weight-bold">First name</h6>
                                        <p>@applicant.FirstName</p>
                                    </div>
                                    <div class="col">
                                        <h6 class="font-weight-bold">Last name</h6>
                                        <p>@applicant.LastName</p>
                                    </div>
                                    <div class="col">
                                        <h6 class="font-weight-bold">Date of birth</h6>
                                        <p>@fullDob</p>
                                    </div>
                                    <div class="col">
                                        <h6 class="font-weight-bold">CDN</h6>
                                        <p>@applicant.Cdn</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-3">
                                        <h6 class="font-weight-bold">Gender</h6>
                                        <p>@applicant.Gender</p>
                                    </div>
                                    <div class="col">
                                        <h6 class="font-weight-bold">Language</h6>
                                        <p>@applicant.SelectedLanguage</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row pt-3">
                        <div class="col">
                            <h3 class="p-2" style="background:#f2f4f7">Contact</h3>
                            <div class="p-3">
                                <div class="row">
                                    <div class="col">
                                        <h6 class="font-weight-bold">Phone number</h6>
                                        <p>@applicant.PhoneNumber</p>
                                    </div>
                                    <div class="col">
                                        <h6 class="font-weight-bold">Secondary number</h6>
                                        <p>@applicant.SecondaryPhoneNumber</p>
                                    </div>
                                    <div class="col">
                                        <h6 class="font-weight-bold">Email</h6>
                                        <p>@applicant.Email</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row pt-3">
                        <div class="col">
                            <h3 class="p-2" style="background:#f2f4f7">Home address</h3>
                            <div class="p-3">
                                <div class="row">
                                    <div class="col">
                                        <h6 class="font-weight-bold">Address</h6>
                                        <p>@applicant.Address</p>
                                    </div>
                                    <div class="col">
                                        <h6 class="font-weight-bold">City</h6>
                                        <p>@applicant.City</p>
                                    </div>
                                    <div class="col">
                                        <h6 class="font-weight-bold">Province/Territory</h6>
                                        <p>@applicant.Province</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-3">
                                        <h6 class="font-weight-bold">Country</h6>
                                        <p>@applicant.HomeCountry</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row pt-3">
                        <div class="col">
                            <h3 class="p-2" style="background:#f2f4f7">Mailing address</h3>
                            <div class="p-3">
                                <div class="row">
                                    <div class="col">
                                        <h6 class="font-weight-bold">Address</h6>
                                        <p>@applicant.MailAddress</p>
                                    </div>
                                    <div class="col">
                                        <h6 class="font-weight-bold">City</h6>
                                        <p>@applicant.MailCity</p>
                                    </div>
                                    <div class="col">
                                        <h6 class="font-weight-bold">Province/Territory</h6>
                                        <p>@applicant.MailProvince</p>
                                    </div>
                                    <div class="col">
                                        <h6 class="font-weight-bold">Postal Code</h6>
                                        <p>@applicant.MailPostalCode</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="tab-pane fade flex-tabs" id="Requests">
                <CSF.SRDashboard.Client.Components.Tables.WorkloadRequest.WorkloadRequestTable />
            </div>
            <div class="tab-pane fade flex-tabs" id="Documents">
                <button type="button" class="btn btn-primary mt-3">
                    Add Document
                </button>
                <Table TableClass="table table-striped table-hover mt-3" OnAfterDataLoaded="OnAfterTableDataLoaded" TableItem="CSF.SRDashboard.Client.Models.Document"
                       @ref="TableRef" DefaultPageSize="25"
                       Items="TableData" HeaderFilterChanged="@(()=>HandleHeaderFilterChanged())">
                    <Column TableItem="CSF.SRDashboard.Client.Models.Document" Title="Request ID" Field="@(x => x.RequestID)" DefaultShowColumn="true" DefaultShowHeaderFilter="false" Sortable="true" Width="25%" />
                    <Column TableItem="CSF.SRDashboard.Client.Models.Document" Title="Documents" Field="@(x => x.Type)" DefaultShowHeaderFilter="false" Sortable="true" Width="25%" />
                    <Column TableItem="CSF.SRDashboard.Client.Models.Document" Title="Language" Field="@(x => x.Language)" DefaultShowHeaderFilter="false" Sortable="true" Width="25%" />
                    <Column TableItem="CSF.SRDashboard.Client.Models.Document" Title="Update date" Field="@(x => x.DateUploadFormatted)" DefaultShowHeaderFilter="false" Sortable="true" Width="25%" />
                    <Pager ShowPageNumber="true" ShowTotalCount="true" />
                </Table>
            </div>
        </div>
    </div>
</div>
