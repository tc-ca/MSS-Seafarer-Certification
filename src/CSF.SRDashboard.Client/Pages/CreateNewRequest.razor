@page "/SeafarerProfile/{Cdn}/create-new-request"

<h3>@this.Applicant.FullName - request @this.Cdn</h3>

<div class="mt-3 mb-3" style="border-top: 2px solid #dee2e6"></div>
<div class="col-8">
    <Collapse HeaderTitleTextColor="#FFFFFF" Title="Request information" HeaderBackgroundColor="#1B50B1" IsCollapsable="true">

        <BodyContent>

            <EditForm EditContext="@EditContext" OnValidSubmit="SaveChanges">
                <FluentValidationValidator />
                <div class="row">
                    <div class="col-5 d-grid gap-3">
                        <div class="form-group">
                            <FormInputText Label="Request ID " Id="RequestID" @bind-Value="@RequestModel.RequestID" ValidationFor="@(()=>RequestModel.RequestID)" />

                        </div>

                        <div class="form-group">
                            <FormInputText Label="Request type" Id="RequestType" @bind-Value="@RequestModel.RequestType" ValidationFor="@(()=>RequestModel.RequestType)" Required="true" />

                        </div>

                        <div class="form-group">
                            <FormInputText Label="Certificate type" Id="CNDInput" @bind-Value="@RequestModel.CertificateType" ValidationFor="@(()=>RequestModel.CertificateType)" Required="true" />

                        </div>

                        <div class="form-group">
                            <FormInputText Label="Submission method" Id="CNDInput" @bind-Value="@RequestModel.SubmissionMethod" ValidationFor="@(()=>RequestModel.SubmissionMethod)" Required="true" />

                        </div>

                        <FormInputSelect  />
                    </div>

                </div>
            </EditForm>

        </BodyContent>

    </Collapse>
</div>
