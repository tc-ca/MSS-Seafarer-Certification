@page "/FindSeafarer"
<h1>Seafarers</h1>

<div class="border rounded col-8">
    <h2>Find a seafarer</h2>
    <p>Enter one or more dearch field to view existing seafarers in the system</p>
    <form style="width:400px">
        <div class="form-group">
            <label for="CDNInput">Candidate Document Number (CDN)</label>
            <input type="text" class="form-control" id="CNDInput" @bind="CDNValue" />
        </div>
        <div class="form-group ">
            <label for="LastNameInput">Last Name</label>
            <input type="text" class="form-control" id="LastNameInput" @bind="LastName" />
        </div>
        <div class="form-group">
            <label for="FirstNameInput">First Name</label>
            <input type="text" class="form-control" id="FirstNameInput" @bind="FirstName" />
        </div>
        <div class="form-group">
            <label for="DobInput">Date of birth</label>
            <input type="date" class="form-control" id="DobInput" @bind="DOB" />
        </div>
        <button class="btn-primary" @onclick=OnClick>Search</button>
    </form>
</div>
@code {
    private string CDNValue { get; set; }
    private string LastName { get; set; }
    private string FirstName { get; set; }
    private DateTime DOB { get; set; }

    private void OnClick()
    {
        Console.Write($"button hehe: {CDNValue} {LastName} {FirstName} {DOB}");
    }

}
