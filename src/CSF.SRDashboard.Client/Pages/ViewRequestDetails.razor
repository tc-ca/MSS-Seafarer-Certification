@page "/SeafarerProfile/{Cdn}/view-request-details/{RequestId:int}"
@*@inject IStringLocalizer<Common> Localizer*@

<h3>@this.Applicant.FullName - @Localizer["ViewRequest"] @RequestId</h3>

<EditForm EditContext="@EditContext">
    <div class="col-8">
        <div class="mt-3 mb-3">
            <Collapse HeaderTitleTextColor="#FFFFFF" Title="Request information" HeaderBackgroundColor="#1B50B1" IsCollapsable="true">
                <BodyContent>
                    <div class="row">
                        <div class="col-5 d-grid gap-3">

                            <FormInputText Id="RequestID" Label="@Localizer["RequestID"]" @attributes="InputAtt" Required="required" @bind-Value="@RequestModel.RequestID" ValidationFor="@(()=>RequestModel.RequestID)" />

                            <FormInputSelect Label="@Localizer["RequestType"]" Id="RequestType" ShowDefaultOption="false" @attributes="InputAtt" @bind-Value="@RequestModel.RequestType" ValidationFor="@(()=>RequestModel.RequestType)">
                                @foreach (var item in RequestTypes)
                                {
                                    <option value="@item.ID">@item.Text</option>
                                }
                            </FormInputSelect>

                            <FormInputSelect Id="CertificateType" Label="@Localizer["CertificateType"]"  ShowDefaultOption="false" SelectLabel="@RequestModel.CertificateType" @bind-Value="@RequestModel.CertificateType" ValidationFor="@(()=>RequestModel.CertificateType)" Required="true">
                                @foreach (var item in CertificateTypes)
                                {
                                    <option value="@item.ID">@item.Text</option>
                                }
                            </FormInputSelect>

                            <FormInputSelect Id="SubmissionMethod" Label="@Localizer["SubmissionMethod"]"  ShowDefaultOption="false" @bind-Value="@RequestModel.SubmissionMethod" ValidationFor="@(()=>RequestModel.SubmissionMethod)" Required="true">
                                @foreach (var item in SubmissionMethods)
                                {
                                    <option value="@item.ID">@item.Text</option>
                                }
                            </FormInputSelect>
                        </div>
                    </div>
                </BodyContent>
            </Collapse>
        </div>

        <div class="mt-3 mb-3">
            <Collapse HeaderTitleTextColor="#FFFFFF" Title="Applicant details" HeaderBackgroundColor="#1B50B1" IsCollapsable="true">
                <BodyContent>
                    <div class="border rounded">
                        <div class="mt-2">
                            <div class="row">
                                <div class="col mr-3">
                                    <div class="float-right" style="cursor: pointer;" @onclick="ViewProfile">
                                        <a style="color: #1B50B1;">
                                            <i class="fas fa-eye mr-2"></i>@Localizer["ViewProfile"]
                                        </a>
                                    </div>
                                </div>
                            </div>


                            <div class="col">
                                <h6 class="font-weight-bold">@Localizer["Name"]</h6>
                                <p>@this.Applicant.FullName</p>
                            </div>

                            <div class="col">
                                <h6 class="font-weight-bold">@Localizer["CDN"]</h6>
                                <p>@this.Applicant.Cdn</p>
                            </div>

                        </div>
                    </div>
                </BodyContent>
            </Collapse>
        </div>


    </div>
</EditForm>