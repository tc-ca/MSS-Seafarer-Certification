{
  "Routes": [

    // pokemon api for testing
    {
      "DownstreamPathTemplate": "/api/v2/pokemon",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "//pokeapi.co",
          "Port": "443"
        }
      ],
      "UpstreamPathTemplate": "/pokemon",
      "UpstreamHttpMethod": [ "Get" ]
    },

    //MPDIS applicant personal information without medical data
    // the actual url is like the following:
    //http://tcappsmssdev/saf-sec-sur/4/csf-mpdis-api-wrapper/mpdis/applicant/0185855Z
    {
      "DownstreamPathTemplate": "/saf-sec-sur/4/csf-mpdis-api-wrapper/mpdis/applicant/{cdn}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "//tcappsmssdev",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/mpdis/Applicant/{cdn}",
      "UpstreamHttpMethod": [ "Get" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },

    // Search with Criteria
    // the direct url is like the following:
    //http://tcappsmssdev/saf-sec-sur/4/csf-mpdis-api-wrapper/mpdis/applicants/search
    {
      "DownstreamPathTemplate": "/saf-sec-sur/4/csf-mpdis-api-wrapper/mpdis/applicants/search",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "//tcappsmssdev",
          "Port": "80"
        }
      ],
      "UpstreamPathTemplate": "/mpdis/search",
      "UpstreamHttpMethod": [ "Post" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    }

  ],

  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:5000"
  }

}
